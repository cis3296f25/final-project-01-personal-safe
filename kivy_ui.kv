#:kivy 2.3.0

<LoginScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: 16
        spacing: 10
        Label:
            text: 'Unlock Vault'
            font_size: '20sp'
        TextInput:
            id: password
            hint_text: 'Master password'
            password: True
            multiline: False
            size_hint_y: None
            height: '44dp'
        Label:
            id: info
            text: ''
            color: 1,0.2,0.2,1
        BoxLayout:
            size_hint_y: None
            height: '48dp'
            spacing: 8
            Button:
                text: 'Unlock'
                on_release: root.do_unlock()
            Button:
                text: 'Exit'
                on_release: app.stop()

<CreateMasterScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: 16
        spacing: 10
        Label:
            text: 'Create Master Password'
            font_size: '20sp'
        TextInput:
            id: new_pw
            hint_text: 'New password'
            password: True
            multiline: False
            size_hint_y: None
            height: '44dp'
        TextInput:
            id: confirm_pw
            hint_text: 'Confirm password'
            password: True
            multiline: False
            size_hint_y: None
            height: '44dp'
        Label:
            id: info
            text: ''
            color: 1,0.2,0.2,1
        BoxLayout:
            size_hint_y: None
            height: '48dp'
            spacing: 8
            Button:
                text: 'Create'
                on_release: root.do_create()
            Button:
                text: 'Exit'
                on_release: app.stop()

<HomeScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: 16
        spacing: 10
        Label:
            text: 'Personal Safe'
            font_size: '22sp'
        BoxLayout:
            size_hint_y: None
            height: '48dp'
            spacing: 8
            Button:
                text: 'Add Password'
                on_release: app.action_add()
            Button:
                text: 'View Passwords'
                on_release: app.action_view()
            Button:
                text: 'Delete Password'
                on_release: app.action_delete()
        Label:
            id: status
            text: 'Ready'
            color: .7,.7,.7,1
